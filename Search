def pesquisa():
	keyb = xbmc.Keyboard('', 'Encontre filmes, atores e diretores')
	keyb.doModal()
	if (keyb.isConfirmed()):
		search = keyb.getText()
		parametro_pesquisa=urllib.quote(search)
		url = 'https://raw.githubusercontent.com/RAPOSO-PAUL/CINE-VIANNA/master/FILMES?s='+parametro_pesquisa
		listar_filmes(url)
	else:
		sys.exit()
